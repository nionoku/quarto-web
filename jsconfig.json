{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "checkJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules"
  ]
}
